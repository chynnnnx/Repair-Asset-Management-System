<MudDialog>
    <DialogContent>
        <div style="text-align: center; margin-bottom: 20px;">
            <MudIcon Icon="@Icons.Material.Filled.Gavel"
                     Style="font-size: 4rem; color: #00415a;" />
        </div>

        <MudText Typo="Typo.h4" Align="Align.Center"
                 Style="color: #00415a; margin-bottom: 20px; font-weight: 600;">
            Terms and Conditions
        </MudText>

        <MudText Typo="Typo.body2" Style="margin-bottom: 20px; color: #666; text-align: center;">
            Please read these terms carefully before using RAMS
        </MudText>

        <MudDivider Style="margin: 20px 0;" />

        <div style="max-height: 400px; overflow-y: auto; padding-right: 10px;">
            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                1. Acceptance of Terms
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                By creating an account and using the Repair Asset Management System (RAMS), you agree to be bound by these Terms and Conditions.
                If you do not agree with any part of these terms, you may not use the system.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                2. User Account Responsibilities
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 15px; line-height: 1.6;">
                You are responsible for:
            </MudText>
            <ul style="margin-bottom: 20px; padding-left: 20px;">
                <li style="margin-bottom: 8px;">
                    <MudText Typo="Typo.body2" Style="line-height: 1.6;">
                        Maintaining the confidentiality of your account credentials
                    </MudText>
                </li>
                <li style="margin-bottom: 8px;">
                    <MudText Typo="Typo.body2" Style="line-height: 1.6;">
                        All activities that occur under your account
                    </MudText>
                </li>
                <li style="margin-bottom: 8px;">
                    <MudText Typo="Typo.body2" Style="line-height: 1.6;">
                        Providing accurate and complete information during registration
                    </MudText>
                </li>
                <li style="margin-bottom: 8px;">
                    <MudText Typo="Typo.body2" Style="line-height: 1.6;">
                        Notifying us immediately of any unauthorized use of your account
                    </MudText>
                </li>
            </ul>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                3. Acceptable Use
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 15px; line-height: 1.6;">
                You agree to use RAMS only for legitimate business purposes. Prohibited activities include:
            </MudText>
            <ul style="margin-bottom: 20px; padding-left: 20px;">
                <li style="margin-bottom: 8px;">
                    <MudText Typo="Typo.body2" Style="line-height: 1.6;">
                        Submitting false or fraudulent repair requests
                    </MudText>
                </li>
                <li style="margin-bottom: 8px;">
                    <MudText Typo="Typo.body2" Style="line-height: 1.6;">
                        Attempting to gain unauthorized access to system resources
                    </MudText>
                </li>
                <li style="margin-bottom: 8px;">
                    <MudText Typo="Typo.body2" Style="line-height: 1.6;">
                        Interfering with or disrupting the system's functionality
                    </MudText>
                </li>
                <li style="margin-bottom: 8px;">
                    <MudText Typo="Typo.body2" Style="line-height: 1.6;">
                        Using the system for any illegal or unauthorized purpose
                    </MudText>
                </li>
            </ul>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                4. Data Privacy
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                We collect and process your personal information in accordance with applicable data protection laws.
                Your data will be used solely for the purpose of managing repair requests and system operations.
                We will not share your personal information with third parties without your consent.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                5. Service Availability
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                While we strive to maintain continuous service availability, we do not guarantee uninterrupted access to RAMS.
                The system may be temporarily unavailable due to maintenance, updates, or unforeseen technical issues.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                6. Limitation of Liability
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                RAMS is provided "as is" without warranties of any kind. We shall not be liable for any damages arising from
                the use or inability to use the system, including but not limited to data loss, system downtime, or repair delays.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                7. Account Termination
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                We reserve the right to suspend or terminate your account at any time if you violate these terms or engage in
                activities that may harm the system or other users. You may also request account deletion by contacting your system administrator.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                8. Changes to Terms
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                We may update these Terms and Conditions from time to time. Continued use of RAMS after changes are posted
                constitutes acceptance of the updated terms. We will notify users of significant changes via email or system notifications.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                9. Contact Information
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                If you have questions about these Terms and Conditions, please contact your system administrator or IT support team.
            </MudText>
        </div>

      

        
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" Variant="Variant.Text" OnClick="Close"
                   Style="color: #666;">
            Close
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; }

    void Close() => MudDialog.Close();
}
