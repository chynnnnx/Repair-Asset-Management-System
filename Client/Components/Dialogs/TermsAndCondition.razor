<MudDialog>
   

    <DialogContent>
        <div style="text-align: center; margin-bottom: 20px;">
            <MudIcon Icon="@Icons.Material.Filled.Gavel"
                     Style="font-size: 4rem; color: #00415a;" />
        </div>

        <MudText Typo="Typo.h4" Align="Align.Center"
                 Style="color: #00415a; margin-bottom: 20px; font-weight: 600;">
            Terms and Conditions
        </MudText>

        <MudText Typo="Typo.body2" Style="margin-bottom: 20px; color: #666; text-align: center;">
            Please read these terms carefully before using RAMS
        </MudText>

        <MudDivider Style="margin: 20px 0;" />

        <div style="max-height: 400px; overflow-y: auto; padding-right: 10px;">
            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                1. Acceptance of Terms
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                By creating an account and using the Repair Asset Management System (RAMS), you agree to be bound by these Terms and Conditions.
                If you do not agree with any part of these terms, you may not use the system.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                2. User Account Responsibilities
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                You are responsible for maintaining the confidentiality of your account credentials, all activities that occur under your account,
                providing accurate information during registration, and notifying the system immediately of any unauthorized use.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                3. Acceptable Use
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                You agree to use RAMS only for legitimate purposes. Prohibited activities include submitting false or fraudulent repair requests,
                attempting unauthorized access, interfering with system functionality, or using the system for illegal purposes.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                4. Data Privacy
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                Your personal information is collected and processed in accordance with data protection laws. Data is used solely for managing repair requests and system operations, and will not be shared with third parties without consent.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                5. Service Availability
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                While we strive for continuous service, access to RAMS may be temporarily unavailable due to maintenance, updates, or technical issues.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                6. Limitation of Liability
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                RAMS is provided "as is" without warranties. We are not liable for damages from using or being unable to use the system, including data loss or repair delays.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                7. Account Termination
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                Accounts may be suspended or terminated for violating terms or activities that harm the system or others. Account deletion can be requested via your system administrator.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                8. Changes to Terms
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                Terms may be updated periodically. Continued use after changes constitutes acceptance. Users will be notified of significant changes.
            </MudText>

            <MudText Typo="Typo.h6" Style="color: #00415a; margin-bottom: 10px; font-weight: 600;">
                9. Contact Information
            </MudText>
            <MudText Typo="Typo.body2" Style="margin-bottom: 20px; line-height: 1.6;">
                For questions, contact your system administrator or IT support team.
            </MudText>
        </div>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Default" Variant="Variant.Text" OnClick="Close" Style="color: #666;">
            Close
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; }

    void Close() => MudDialog.Close();
}
